@using BlazorCssTransitions

@* Example: Basic expand/collapse for AnimatedSizeContainer *@
<div style="margin-bottom: 2rem;">
    <h4>Basic Expand/Collapse</h4>
    <div style="margin-bottom: 0.5rem; color: #555; font-size: 0.98em;">
        Animate showing/hiding content vertically.
    </div>
    <button @onclick="Toggle">@(expanded ? "Collapse" : "Expand")</button>
    <AnimatedSizeContainer CollapseVertically="!expanded">
        <ChildContent>
            <div style="padding: 1rem; background: #e0f7fa; border-radius: 4px;">This content expands and collapses smoothly.</div>
        </ChildContent>
    </AnimatedSizeContainer>
</div>

@code {
    private bool expanded = true;
    private void Toggle() => expanded = !expanded;
}
