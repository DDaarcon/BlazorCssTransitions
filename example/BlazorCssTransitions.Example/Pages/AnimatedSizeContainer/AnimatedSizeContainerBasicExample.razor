@* Example: Expand/Collapse with Animation for AnimatedSizeContainer *@
<div style="margin-bottom: 2rem;">
    <h4>Expand/Collapse with Animation</h4>
    <button @onclick="Toggle">Toggle Size</button>
    <BlazorCssTransitions.AnimatedSizeContainer CollapseVertically="!expanded">
        <ChildContent>
            <div style="padding: 1rem; background: #fff3e0; border-radius: 4px;">This content expands and collapses smoothly.</div>
        </ChildContent>
    </BlazorCssTransitions.AnimatedSizeContainer>
    <!-- Code comment for users: The AnimatedSizeContainer animates changes in its content's size. -->
</div>

@code {
    private bool expanded = true;
    private void Toggle() => expanded = !expanded;
}
