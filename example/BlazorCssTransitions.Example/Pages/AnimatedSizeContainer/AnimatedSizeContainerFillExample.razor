@using BlazorCssTransitions

@* Example: FillWidth/FillHeight for AnimatedSizeContainer *@
<div style="margin-bottom: 2rem;">
    <h4>FillWidth/FillHeight</h4>
    <div style="margin-bottom: 0.5rem; color: #555; font-size: 0.98em;">
        The container fills the available width and/or height.
    </div>
    <button @onclick="ToggleWidth">@(fillWidth ? "Unset FillWidth" : "Set FillWidth")</button>
    <button @onclick="ToggleHeight">@(fillHeight ? "Unset FillHeight" : "Set FillHeight")</button>

    <div style="width: 350px; height: 350px; border: solid 1px;">
        <AnimatedSizeContainer FillWidth="fillWidth" FillHeight="fillHeight">
            <div style="padding: 1rem; background: #e0e0ff; border-radius: 4px;">This content fills the available space.</div>
        </AnimatedSizeContainer>
    </div>
</div>

@code {
    private bool fillWidth = false;
    private bool fillHeight = false;
    private void ToggleWidth() => fillWidth = !fillWidth;
    private void ToggleHeight() => fillHeight = !fillHeight;
}
