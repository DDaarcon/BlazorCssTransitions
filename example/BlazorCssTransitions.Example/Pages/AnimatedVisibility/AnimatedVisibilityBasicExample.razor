@using BlazorCssTransitions

@* Example: Basic Show/Hide with Fade for AnimatedVisibility *@
<div style="margin-bottom: 2rem;">
    <h4>Basic Show/Hide with Fade</h4>
    <button @onclick="Toggle">@(isVisible ? "Hide" : "Show")</button>
    <AnimatedVisibility Visible="isVisible">
        <ChildContent>
            <div style="padding: 1rem; background: #e0f7fa; border-radius: 4px;">This content fades in and out.</div>
        </ChildContent>
    </AnimatedVisibility>
    <!-- Code comment for users: The AnimatedVisibility component animates the appearance and disappearance of its content. -->
</div>

@code {
    private bool isVisible = true;
    private void Toggle() => isVisible = !isVisible;
}
