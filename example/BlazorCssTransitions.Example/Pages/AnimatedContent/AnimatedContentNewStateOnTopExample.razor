@using BlazorCssTransitions

@* Example: NewStateOnTop for AnimatedContent *@
<div style="margin-bottom: 2rem;">
    <h4>NewStateOnTop</h4>
    <div style="margin-bottom: 0.5rem; color: #555; font-size: 0.98em;">
        Newer content appears above older content.
    </div>
    <button @onclick="() => SetState(1)" disabled="@(state == 1)">State 1</button>
    <button @onclick="() => SetState(2)" disabled="@(state == 2)">State 2</button>
    <AnimatedContent TState="int" TargetState="state" NewStateOnTop>
        @if (context == 1)
        {
            <span>This is state 1</span>
        }
        else if (context == 2)
        {
            <span>This is state 2</span>
        }
    </AnimatedContent>
</div>

@code {
    private int state = 1;
    private void SetState(int s) => state = s;
}
